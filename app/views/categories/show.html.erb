<section class="categories-show">

  <header class="page-header">
    <h1>
      <%= @category.name %>
      <small>(<%= pluralize @products.size, 'product' %>)</small>
    </h1>
  </header>

  <% if flash.notice %>
    <p><%= flash.notice %></p>
  <% end %>
  <div class="products">
    <%= render @products %>
  </div>

</section>
